<!doctype html>
<html lang="es">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

 

    
    <title>{{titulo}}</title>
  </head>
  <body>

    <h1 class="text-center my-4">{{nombrePagina}}</h1>
    <div class="container" id="container">
    
     <div class="row" id="row">

            <form action="/"  method="POST">
                <div class="mb-3">
                    <label for="exampleFormControlInput1" class="form-label">Nombre</label>
                    <input type="text" name='nombre' class="form-control" id="exampleFormControlInput1" placeholder="">
                </div>
                <div class="mb-3">
                    <label for="exampleFormControlTextarea1" class="form-label">Descripción</label>
                    <textarea class="form-control" name='descripcion' id="exampleFormControlTextarea1" rows="3"></textarea>
                </div>
               
                <div>
                    <button class="btn btn-primary  col-12 mx-auto" id='btnEnviar' type="submit">Enviar</button>
                </div>
            </form>

        </div>
     <div class="row  my-5  table-responsive" id="row">
          <table class="table" >
              <thead class="table-dark">
                <tr>
                  <th scope="col">Id</th>
                  <th scope="col">Tarea</th>
                  <th scope="col">Descripción</th>
                  <th scope="col">Editar</th>
                  <th scope="col">Eliminar</th>
                </tr>
              </thead>
              <tbody id='tablaTareas'>
                {{#if tareasDB }}

                  {{#each tareasDB}}

                    

                   

                    <tr>
                      <th scope="row">{{this._id}}</th>
                      <td>{{this.nombre}}</td>
                      <td>{{this.descripcion}}</td>
                      
                           <td><button class="btn btn-success  editar" id='btnEditar' data-id = {{this._id}}>Editar</button></td>
                          <td><button class="btn btn-danger eliminar"  id='btnEliminar' data-id = {{this._id}}>Eliminar</button></td>

                    
                     

                    </tr>                

                  {{/each}}
                {{else}}
                  algo esta fallando
                {{/if}}
             
               
              </tbody>
            </table>
        </div>

    </div>


    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    <!-- Option 2: Separate Popper and Bootstrap JS -->
